{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "esnext",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "lib": [
    "es2017",
    "esnext",
    "node"
  ],
  "include": [
    "src/js/**/*.ts"
  ],
  "exclude": [
    "src/js/**/*.spec.ts"
  ]
}
